{
    "containers": {
        "app": {
            "args": [
                "--config=/etc/app/config.yaml",
                "--verbose"
            ],
            "command": [
                "/bin/myapp"
            ],
            "env": [
                {
                    "name": "APP_ENV",
                    "value": "production"
                },
                {
                    "name": "LOG_LEVEL",
                    "value": "debug"
                }
            ],
            "image": "busybox:latest",
            "volumeMounts": [
                {
                    "mountPath": "/etc/app",
                    "name": "config",
                    "readOnly": true
                },
                {
                    "mountPath": "/data",
                    "name": "data",
                    "readOnly": false
                }
            ]
        }
    },
    "nodeSelector": {
        "node-type": "signed-workloads"
    }
}